    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYDEVD_WARN_SLOW_RESOLVE_TIMEOUT": "10"
            }
        },
        {
            "name": "Python: Point Cloud Visualization",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/bpy_pc_visualization.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": true,
            "env": {
                // "PYTHONPATH": "${workspaceFolder}/thesis/scripts"
            }
        },

    ]
}